<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#3358B7F3"
                    android:centerColor="#3358B7F3"
                    android:centerY="0.75"
                    android:endColor="#3358B7F3"
                    android:angle="270"
            />
        </shape>
    </item>
    
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#58B7F3"
                        android:centerColor="#58B7F3"
                        android:centerY="0.75"
                        android:endColor="#58B7F3"
                        android:angle="270"
                />
            </shape>
        </scale>
    </item>
    
</layer-list>

