<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_round_gray_line_radius4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="380dp"
        android:paddingBottom="@dimen/dp_18"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/rl_function_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_yellow_round_no_line"
                android:gravity="center"
                android:text="18"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_test_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_position"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="【单选题】"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_6"/>

            <TextView
                android:id="@+id/tv_test_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_test_style"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="(10分)"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_6"/>

            <LinearLayout
                android:id="@+id/make_status"
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_white_round_gray_line_radius4"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/ic_parse"
                    android:layout_marginRight="@dimen/dp_6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试题解析"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/text_gray_44"/>
            </LinearLayout>
        </RelativeLayout>

        <WebView
            android:id="@+id/wv_testtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_function_container"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_test_answer_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wv_testtitle"
            android:layout_margin="@dimen/dp_15"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_27">
            <ImageView
                android:id="@+id/iv_previous"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@mipmap/ic_previous"/>
            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_next"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_score_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="380dp"
            android:background="@drawable/bg_white_round_gray_line_radius4"
            android:visibility="visible">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="@color/common_text_black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_33"
                android:text="测试结果"/>
            <TextView
                android:id="@+id/tv_has_score"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_below="@+id/title"
                android:textColor="#DF4848"
                android:textSize="60dp"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_has_score"
                android:text="分"
                android:layout_below="@+id/title"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/common_text_black"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="@dimen/dp_4"/>

            <TextView
                android:id="@+id/tv_total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_has_score"
                android:textColor="@color/common_text_black"
                android:textSize="@dimen/dp_16"
                android:layout_centerHorizontal="true"
                android:text="题目总分100分"/>
            <LinearLayout
                android:id="@+id/ll_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_total_score"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_54">
                <TextView
                    android:id="@+id/tv_parse"
                    android:layout_width="@dimen/dp_191"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/bg_yellow_round_no_line"
                    android:gravity="center"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/white"
                    android:text="试题解析"/>
                <TextView
                    android:id="@+id/tv_continue"
                    android:layout_width="@dimen/dp_191"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/bg_green_round_no_line"
                    android:gravity="center"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="继续学习"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_test_agin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_button_container"
                android:drawableLeft="@drawable/ic_drawable_test_agin"
                android:drawablePadding="@dimen/dp_6"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:textColor="#303030"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:text="重新测试"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>