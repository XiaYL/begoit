<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray_f5"
    android:orientation="vertical">

   <com.zhy.autolayout.AutoLinearLayout
       android:layout_width="match_parent"
       android:layout_height="289dp"
       android:gravity="center"
       android:fitsSystemWindows="true"
       android:background="@mipmap/bg_user_center"
       android:orientation="vertical">

       <ImageView
           android:id="@+id/iv_user_portrait"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:srcCompat="@mipmap/img_uset_portrait"/>

       <TextView
           android:id="@+id/tv_user_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_16"
           android:textColor="@color/black"
           android:textSize="@dimen/dp_26"
           android:text="@string/app_name"/>

       <TextView
           android:id="@+id/tv_exit"
           android:layout_width="110dp"
           android:layout_height="33dp"
           android:layout_marginTop="@dimen/dp_16"
           android:textColor="@color/white"
           android:textSize="@dimen/dp_16"
           android:gravity="center"
           android:background="@drawable/bg_gray_ae_round_no_line"
           android:text="@string/exit"/>

   </com.zhy.autolayout.AutoLinearLayout>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:paddingLeft="@dimen/dp_54"
        android:paddingRight="@dimen/dp_54"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_user_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/text_gray_3a"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:text="@string/success"
            android:drawableTop="@mipmap/ic_mysuccess"/>

        <TextView
            android:id="@+id/tv_use_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/text_gray_3a"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:text="@string/usepage"
            android:drawableTop="@mipmap/ic_usepage"/>
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/text_gray_3a"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:text="@string/about"
            android:drawableTop="@mipmap/ic_about"/>
        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/text_gray_3a"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:text="@string/user_unbind"
            android:drawableTop="@mipmap/ic_user_unbind"/>
        <TextView
            android:id="@+id/tv_check_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/text_gray_3a"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:text="@string/check_version"
            android:drawableTop="@mipmap/ic_check_version"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/upload_learned"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:visibility="visible"
            app:srcCompat="@mipmap/ic_upload_normal"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
           />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8A8A8A"
            android:layout_toRightOf="@+id/iv_upload"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/upload_learned"/>


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>