<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_27"
    android:layout_marginRight="@dimen/dp_27"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/bg_white_round_gray_line_radius12">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_66"
       android:gravity="center_vertical">
      <ImageView
          android:id="@+id/iv_icon"
          android:layout_width="@dimen/dp_14"
          android:layout_height="@dimen/dp_22"
          android:layout_marginLeft="@dimen/dp_25"
          android:layout_centerVertical="true"
          android:src="@mipmap/ic_success_grenn"/>
      <TextView
          android:id="@+id/tv_channel_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/iv_icon"
          android:layout_marginLeft="@dimen/dp_8"
          android:textSize="@dimen/dp_18"
          android:textColor="@color/common_text_black"
          android:text=""/>
      <TextView
          android:id="@+id/tv_sum_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/dp_25"
          android:layout_marginLeft="@dimen/dp_8"
          android:textStyle="bold"
          android:textSize="@dimen/dp_21"
          android:textColor="@color/red_score"
          android:text=""/>
      <TextView
          android:id="@+id/tv_score_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/tv_sum_score"
          android:layout_marginLeft="@dimen/dp_8"
          android:textSize="@dimen/dp_18"
          android:textColor="@color/common_text_black"
          android:text="总分："/>
   </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#D9D8D8"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="122dp">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="vertical">
           <TextView
               android:id="@+id/tv_video_finish"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/common_text_gray"
               android:textSize="@dimen/dp_15"
               android:text=""/>
          <TextView
              android:id="@+id/tv_video_finish_score"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@color/common_text_black"
              android:textSize="@dimen/dp_18"
              android:layout_marginTop="@dimen/dp_15"
              android:text=""/>
       </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
         <TextView
             android:id="@+id/tv_exchange"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_text_gray"
             android:textSize="@dimen/dp_15"
             android:text=""/>
         <TextView
             android:id="@+id/tv_exchange_score"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:textColor="@color/common_text_black"
             android:textSize="@dimen/dp_18"
             android:layout_marginTop="@dimen/dp_15"
             android:text=""/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
         <TextView
             android:id="@+id/tv_video_test"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_text_gray"
             android:textSize="@dimen/dp_15"
             android:text=""/>
         <TextView
             android:id="@+id/tv_video_test_score"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:textColor="@color/common_text_black"
             android:textSize="@dimen/dp_18"
             android:layout_marginTop="@dimen/dp_15"
             android:text=""/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
         <TextView
             android:id="@+id/tv_homework"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_text_gray"
             android:textSize="@dimen/dp_15"
             android:text=""/>
         <TextView
             android:id="@+id/tv_homework_score"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:textColor="@color/common_text_black"
             android:textSize="@dimen/dp_18"
             android:layout_marginTop="@dimen/dp_15"
             android:text=""/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
         <TextView
             android:id="@+id/tv_teacher"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_text_gray"
             android:textSize="@dimen/dp_15"
             android:text=""/>
         <TextView
             android:id="@+id/tv_teacher_score"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:textColor="@color/common_text_black"
             android:textSize="@dimen/dp_18"
             android:layout_marginTop="@dimen/dp_15"
             android:text=""/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
         <TextView
             android:id="@+id/tv_exam"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_text_gray"
             android:textSize="@dimen/dp_15"
             android:text=""/>
         <TextView
             android:id="@+id/tv_exam_score"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:layout_marginTop="@dimen/dp_15"
             android:textStyle="bold"
             android:textColor="@color/common_text_black"
             android:textSize="@dimen/dp_18" />
      </LinearLayout>
   </LinearLayout>
</LinearLayout>